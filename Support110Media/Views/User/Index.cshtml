@model IEnumerable<Support110Media.Data.Model.UserModel>

@{
    ViewData["Title"] = "Index";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<h2> User List</h2>

<p>
    <a href="~/User/AddNewUser" class="btn btn-link glyphicon glyphicon-plus">Create New</a>
</p>
<table border="0" class="topic" id="indexTable">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Password</th>
            <th>Mail Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MailAddress)
                </td>
                <td>
                    @Html.ActionLink("", "UpdateUser", new { id = item.UserId }, new { @class = "btn btn-success  btn-xs  glyphicon glyphicon-pencil" }) |
                    @Html.ActionLink("", "DeleteUser", new { id = item.UserId }, new { @class = "btn btn-danger  btn-xs  glyphicon glyphicon-trash", onclick = "return confirm('Are you sure ?')" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>
<script>$('#indexTable').DataTable();</script>